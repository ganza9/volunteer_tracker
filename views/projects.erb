<div class="container">
<h1>Project List</h1>

  <% if @projects.any?() %>
    <h3>Here are your projects:</h3>

    <ul>
      <% @projects.each() do |project| %>
        <li><a href="/projects/<%= project.id() %>"><%= project.title() %></a></li>
      <% end %>
    </ul>

  <% else %>

    <p>There are no Projects yet!</p>

  <% end %>

    <a href="/projects/new"><button class="btn btn-success pull-left">Add New Project</button></a>
    <br>
    <br>
    <a href="/">Return Home</a>
</div>
